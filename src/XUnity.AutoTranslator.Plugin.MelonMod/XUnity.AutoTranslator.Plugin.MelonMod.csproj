      <VersionNumber Include="$([System.Text.RegularExpressions.Regex]::Replace(&quot;%(Targets.Version)&quot;, &quot;^(.+?)(\.0+)$&quot;, &quot;$1&quot;))" />
    </ItemGroup>
    <Exec Command="if $(ConfigurationName) == Release (&#xD;&#xA;   for %25%25f in (&quot;$(SolutionDir)dist\Translators\*&quot;) do XCOPY /Y /I &quot;%25%25f&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\Translators\&quot;&#xD;&#xA;   for %25%25f in (&quot;$(SolutionDir)dist\Translators\FullNET\*&quot;) do XCOPY /Y /I &quot;%25%25f&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\Translators\FullNET\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(TargetDir)ExIni.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(TargetDir)XUnity.AutoTranslator.Plugin.Core.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(TargetDir)XUnity.AutoTranslator.Plugin.ExtProtocol.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(TargetDir)XUnity.Common.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(TargetDir)XUnity.ResourceRedirector.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(SolutionDir)libs\MonoMod\Mono.Cecil.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(SolutionDir)libs\MonoMod\MonoMod.Utils.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(SolutionDir)libs\MonoMod\MonoMod.RuntimeDetour.dll&quot; &quot;$(SolutionDir)dist\MelonMod\MelonLoader\Managed\&quot;&#xD;&#xA;   XCOPY /Y /I &quot;$(TargetDir)$(TargetName)$(TargetExt)&quot; &quot;$(SolutionDir)dist\MelonMod\Mods\&quot;&#xD;&#xA;   COPY /Y &quot;$(SolutionDir)README.md&quot; &quot;$(SolutionDir)dist\MelonMod\Mods\README (AutoTranslator).md&quot;&#xD;&#xA;   &quot;$(SolutionDir)tools\xzip.exe&quot; &quot;$(SolutionDir)dist\MelonMod&quot; &quot;$(SolutionDir)dist\XUnity.AutoTranslator-MelonMod-@(VersionNumber).zip&quot;&#xD;&#xA;)" />
  </Target>

